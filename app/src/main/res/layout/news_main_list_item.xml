<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">


    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_weight="4"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/textColorNewsTitleMainPage"
        android:textSize="16sp"
        tools:text="News headline placeholder that should wrap to more than 3 lines of text" />


    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:textColor="@color/textColorNewsDateMainPage"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        tools:text="Feb 6, 2019" />

    <TextView
        android:id="@+id/news_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:textColor="@color/textColorNewsSouceMainPage"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        tools:text="Seattle Times" />


</LinearLayout>